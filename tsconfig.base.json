{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "tmp"]
}
